<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animal_type_grid_item_container"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/animal_type_item_grid_image_view"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:contentDescription="@string/content_description_animal_icon_type"
            android:src="@drawable/ic_animal" />

        <TextView
            android:id="@+id/animal_type_item_grid_name"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Dog" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>